$ let _ = require('underscore');
$ let fieldId = data.name.replace(['[', ']'], '_');
$ let required = data.required ? 'required' : '';
$ let isMulti = data.multi ? 1 : 0;
<div class="image-field col-lg-${data.cols} col-md-${data.cols} col-sm-12 col-xs-12">
    <input id="${fieldId}" name="${data.name}" value="${data.value}" type="hidden" ${required} />
    <div class="image-field-thumb" data-target="${fieldId}" data-types="image" data-multi="${isMulti}">
        <div class="thumb-holder" id="image-field-thumb-${fieldId}">
        </div>
        <div class="image-field-actions">
            <label for="${fieldId}" class="form-label">
                ${data.label}
                <small.required if(data.required)>*</small>
            </label>
        </div>
    </div>
</div>