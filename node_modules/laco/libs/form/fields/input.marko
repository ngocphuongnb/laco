$ let _ = require('underscore');
$ let fieldId = data.name.replace(['[', ']'], '_');
$ let fields = _.isObject(data.fields) ? data.fields : {};


<div class="input-field col-lg-${data.cols} col-md-${data.cols} col-sm-12 col-xs-12">
    <label for="${fieldId}" class="">${data.label}</label>
    <div class="form-group">
        <div class="form-line">
            <textarea id="${fieldId}" name="${data.name}" rows="1" class="form-control no-resize" placeholder="${data.helper}">${data.value}</textarea>
        </div>
    </div>
</div>