$ let _ = require('underscore');
$ let fieldId = data.name.replace(['[', ']'], '_');
$ let fields = _.isObject(data.fields) ? data.fields : {};


<div class="input-field col-lg-${data.cols} col-md-${data.cols} col-sm-12 col-xs-12">
    <div class="form-group form-float">
        <div class="form-line">
            $ let required = data.required ? 'required' : '';
            <textarea id="${fieldId}" name="${data.name}" rows="1" class="form-control no-resize auto-growth" ${required}>${data.value}</textarea>
            <label for="${fieldId}" class="form-label">
                ${data.label}
                <small.required if(data.required)>*</small>
            </label>
        </div>
    </div>
</div>