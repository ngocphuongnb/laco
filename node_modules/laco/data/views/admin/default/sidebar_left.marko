<macro menuLink(obj)>
    <a href="javascript:void(0);" class="menu-toggle waves-effect waves-block" if(!!obj.childs.length)>
        $!{obj.icon}<span>${obj.anchor}</span>
    </a>
    <a href="${obj.link}" class="waves-effect waves-block" else>$!{obj.icon}<span>${obj.anchor}</span></a>
    <ul class="ml-menu" if(!!obj.childs.length)>
        <li><a href="${obj.link}" class="waves-effect waves-block">$!{obj.icon}<span>${obj.anchor}</span></a></li>
        <li for(menuItem in obj.childs)>
            <menuLink obj=menuItem />
        </li>
    </ul>
</macro>
